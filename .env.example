# ScreenMonitorMCP v2 - Environment Configuration
# Copy this file to .env and customize the values for your setup.

# ================================================
# SERVER SETTINGS
# ================================================
# Host address for the web server (use 0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Port for the web server
PORT=8000

# Enable auto-reload during development
RELOAD=false

# ================================================
# SECURITY
# ================================================
# A secure, random string for server authentication. Required for most endpoints.
API_KEY=your-secret-api-key-here

# CORS Settings - A list of allowed origins. Use ["*"] to allow all.
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true

# ================================================
# AI PROVIDER (OpenAI & Compatible)
# ================================================
# Your OpenAI or compatible API key. Required for all AI features.
# Get your key from:
# - OpenAI: https://platform.openai.com/api-keys
# - OpenRouter: https://openrouter.ai/keys
# - Other providers: Check their documentation
OPENAI_API_KEY=your-openai-api-key-here

# Base URL for OpenAI compatible APIs
# Examples:
# - OpenAI: https://api.openai.com/v1
# - OpenRouter: https://openrouter.ai/api/v1
# - Ollama: http://localhost:11434/v1
# - LocalAI: http://localhost:8080/v1
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Default model for AI vision and chat
# OpenAI models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4-vision-preview
# OpenRouter models: qwen/qwen2.5-vl-32b-instruct:free, anthropic/claude-3.5-sonnet
# Ollama models: llava, bakllava, moondream
OPENAI_MODEL=qwen/qwen2.5-vl-32b-instruct:free

# Timeout for AI API requests in seconds
OPENAI_TIMEOUT=30

# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=1000

# ================================================
# SCREEN CAPTURE SETTINGS
# ================================================
# Default image format for screenshots (png, jpeg, webp)
DEFAULT_IMAGE_FORMAT=png

# Default image quality (1-100, only applies to jpeg)
DEFAULT_IMAGE_QUALITY=85

# Default monitor to capture (0 = all monitors, 1 = primary, 2+ = specific monitor)
DEFAULT_MONITOR=1

# Enable compression for large screenshots
ENABLE_IMAGE_COMPRESSION=true

# Maximum image size in bytes (0 = no limit)
MAX_IMAGE_SIZE=5242880

# ================================================
# STREAMING SETTINGS
# ================================================
# Default frames per second for screen streaming
DEFAULT_STREAM_FPS=5

# Default quality for streaming (1-100)
DEFAULT_STREAM_QUALITY=75

# Enable adaptive quality based on network conditions
ADAPTIVE_QUALITY=true

# Buffer size for streaming (in frames)
STREAM_BUFFER_SIZE=10

# ================================================
# MCP SERVER SETTINGS
# ================================================
# MCP server name
MCP_SERVER_NAME=screenmonitormcp-v2

# MCP server version
MCP_SERVER_VERSION=2.0.0

# MCP protocol version
MCP_PROTOCOL_VERSION=2025-06-18

# Enable MCP debug mode
MCP_DEBUG=false

# ================================================
# LOGGING SETTINGS
# ================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (simple, detailed, json)
LOG_FORMAT=detailed

# Enable file logging
ENABLE_FILE_LOGGING=false

# Log file path (only used if file logging is enabled)
LOG_FILE_PATH=logs/screenmonitormcp.log

# Maximum log file size in MB
MAX_LOG_FILE_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# ================================================
# PERFORMANCE SETTINGS
# ================================================
# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable caching for screenshots
ENABLE_CACHING=true

# Cache expiration time in seconds
CACHE_EXPIRATION=300

# Maximum cache size in MB
MAX_CACHE_SIZE=100

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
# Enable development mode (more verbose logging, auto-reload)
DEVELOPMENT_MODE=false

# Enable profiling
ENABLE_PROFILING=false

# Enable metrics collection
ENABLE_METRICS=false

# Metrics export port
METRICS_PORT=9090
